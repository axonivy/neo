{
  "name": "neo",
  "private": true,
  "version": "13.1.0-next",
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "ci": "npm run ci:prepare && npm run type && (npm run lint:ci || true) && npm run test:ci  && npm run i18n:ci",
    "ci:prepare": "npm install && npm run build:editor && npm run build",
    "build": "react-router build",
    "dev": "react-router dev",
    "dev:debug": "export DEBUG=vite:* && remix vite:dev",
    "serve": "vite preview",
    "codegen:openapi": "orval",
    "download:openapi": "mvn clean validate && curl -o target/market/openapi.json https://market.axonivy.com/marketplace-service/api-docs/api --create-dirs",
    "build:editor": "npm run -w webviews/process-editor build",
    "lint": "eslint",
    "lint:ci": "eslint -o eslint.xml -f checkstyle",
    "lint:fix": "eslint --fix",
    "lint:inspect": "eslint --inspect-config",
    "test": "vitest",
    "test:ci": "vitest --watch=false",
    "playwright": "npm run -w playwright --",
    "type": "react-router typegen && tsc && npm run -w webviews/process-editor type && npm run -w playwright type",
    "update:axonivy:next": "npx --yes npm-check-updates @axonivy* -ws --root -t patch -u",
    "sbom": "npx --yes @cyclonedx/cyclonedx-npm --output-format JSON --output-file bom.json",
    "i18n:extract": "npx i18next-parser",
    "i18n:ci": "npx i18next-parser --fail-on-update"
  },
  "dependencies": {
    "@axonivy/dataclass-editor": "~13.1.0-next.511",
    "@axonivy/dataclass-editor-protocol": "~13.1.0-next.511",
    "@axonivy/form-editor": "~13.1.0-next.646",
    "@axonivy/form-editor-core": "~13.1.0-next.646",
    "@axonivy/form-editor-protocol": "~13.1.0-next.646",
    "@axonivy/jsonrpc": "~13.1.0-next.610",
    "@axonivy/ui-components": "~13.1.0-next.610",
    "@axonivy/ui-icons": "~13.1.0-next.610",
    "@axonivy/variable-editor": "~13.1.0-next.661",
    "@axonivy/variable-editor-protocol": "~13.1.0-next.661",
    "@axonivy/cms-editor": "~13.1.0-next.93",
    "@axonivy/cms-editor-protocol": "~13.1.0-next.93",
    "@react-router/node": "^7.1.3",
    "@tanstack/react-query": "5.69.0",
    "@tanstack/react-query-devtools": "5.69.0",
    "i18next": "^24.2.2",
    "i18next-browser-languagedetector": "^8.0.4",
    "i18next-chained-backend": "^4.6.2",
    "i18next-http-backend": "^3.0.2",
    "i18next-resources-to-backend": "^1.2.1",
    "isbot": "^5",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-i18next": "^15.4.1",
    "react-router": "^7.1.3",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@axonivy/eslint-config": "^13.1.0-next.610",
    "@react-router/dev": "^7.1.3",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@vanilla-extract/recipes": "^0.5.5",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint-plugin-i18next": "^6.1.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "globals": "^16.0.0",
    "happy-dom": "^17.0.0",
    "i18next-parser": "^9.3.0",
    "orval": "7.5.0",
    "prettier": "^3.3.2",
    "typescript": "^5.7.3",
    "vite": "^6.2.4",
    "vite-plugin-svgr": "^4.3.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.3"
  },
  "peerDependencies": {
    "@axonivy/process-editor-inscription-protocol": "~13.1.0-next"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "volta": {
    "node": "22.11.0"
  },
  "workspaces": [
    "webviews/process-editor",
    "playwright"
  ]
}
