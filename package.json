{
  "name": "neo",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "ci": "npm install && npm run type && npm run lint:ci && npm run build:editor && npm run build",
    "build": "remix vite:build",
    "dev": "remix vite:dev",
    "dev:debug": "export DEBUG=vite:* && remix vite:dev",
    "build:editor": "npm run -w editors/process build",
    "start:mock": "node --watch ./mock-server.js",
    "lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
    "lint:ci": "npm run lint -- -o eslint.xml -f checkstyle",
    "preview": "vite preview",
    "type": "tsc && npm run -w editors/process type",
    "update:axonivy:next": "npx --yes npm-check-updates @axonivy* -ws --root -t patch -u"
  },
  "dependencies": {
    "@axonivy/form-editor": "~11.4.0-next.120",
    "@axonivy/form-editor-core": "~11.4.0-next.120",
    "@axonivy/form-editor-protocol": "~11.4.0-next.120",
    "@axonivy/ui-components": "~11.4.0-next.217",
    "@axonivy/ui-icons": "~11.4.0-next.217",
    "@axonivy/jsonrpc": "~11.4.0-next.217",
    "@remix-run/node": "^2.10.0",
    "@remix-run/react": "^2.10.0",
    "@tanstack/react-query": "5.32.1",
    "@tanstack/react-query-devtools": "5.32.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zustand": "^4.5.4"
  },
  "devDependencies": {
    "@remix-run/dev": "^2.10.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "@vanilla-extract/recipes": "^0.5.3",
    "eslint": "^8.38.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "typescript": "^5.5.2",
    "vite": "^5.3.1",
    "vite-plugin-svgr": "^4.2.0",
    "vite-tsconfig-paths": "^4.3.2"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "workspaces": [
    "editors/process"
  ]
}
