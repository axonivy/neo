{
  "name": "@axonivy/neo-root",
  "private": true,
  "version": "13.2.0-next",
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "ci": "pnpm run ci:prepare && pnpm run type && (pnpm run lint:ci || true) && pnpm run test:ci  && pnpm run i18n:ci",
    "ci:prepare": "pnpm install --no-frozen-lockfile && pnpm run build:editor && pnpm run i18n:collect && pnpm run build",
    "build": "react-router build",
    "build:editor": "pnpm run --filter @axonivy/neo-webview-process-editor build",
    "dev": "react-router dev",
    "dev:debug": "export DEBUG=vite:* && remix vite:dev",
    "serve": "vite preview",
    "openapi:codegen": "orval",
    "openapi:download": "mvn clean validate && curl -o target/market/openapi.json https://market.axonivy.com/marketplace-service/api-docs/api --create-dirs",
    "lint": "eslint",
    "lint:ci": "eslint -o eslint.xml -f checkstyle",
    "lint:fix": "eslint --fix",
    "lint:inspect": "eslint --inspect-config",
    "i18n": "pnpm run i18n:extract && pnpm run i18n:collect",
    "i18n:collect": "node --experimental-transform-types ./scripts/i18n-collect.ts",
    "i18n:extract": "i18next",
    "i18n:ci": "i18next --fail-on-update",
    "test": "vitest",
    "test:ci": "vitest run",
    "playwright": "pnpm run --filter playwright --",
    "type": "react-router typegen && tsc && pnpm run --filter @axonivy/neo-webview-process-editor type && pnpm run --filter @axonivy/neo-playwright type",
    "update:axonivy:next": "npx --yes npm-check-updates @axonivy* -ws --root -t semver -u",
    "sbom": "pnpm dlx @cyclonedx/cdxgen -t pnpm"
  },
  "dependencies": {
    "@axonivy/cms-editor": "~13.2.0-next.483.c4ef29c",
    "@axonivy/cms-editor-protocol": "~13.2.0-next.483.c4ef29c",
    "@axonivy/database-editor": "~13.2.0-next.72.8c1ea02",
    "@axonivy/database-editor-protocol": "~13.2.0-next.72.8c1ea02",
    "@axonivy/dataclass-editor": "~13.2.0-next.711.1ceb697",
    "@axonivy/dataclass-editor-protocol": "~13.2.0-next.711.1ceb697",
    "@axonivy/form-editor": "~13.2.0-next.975.e6276d0",
    "@axonivy/form-editor-core": "~13.2.0-next.975.e6276d0",
    "@axonivy/form-editor-protocol": "~13.2.0-next.975.e6276d0",
    "@axonivy/jsonrpc": "~13.2.0-next.909.6b8b57e",
    "@axonivy/log-view": "~13.2.0-next.246.0b29956",
    "@axonivy/log-view-core": "~13.2.0-next.246.0b29956",
    "@axonivy/ui-components": "~13.2.0-next.909.6b8b57e",
    "@axonivy/ui-graph": "~13.2.0-next.909.6b8b57e",
    "@axonivy/ui-icons": "~13.2.0-next.909.6b8b57e",
    "@axonivy/variable-editor": "~13.2.0-next.849.4424b1c",
    "@axonivy/variable-editor-protocol": "~13.2.0-next.849.4424b1c",
    "@eclipse-glsp/protocol": "2.5.0",
    "@react-router/node": "^7.6.3",
    "@tanstack/react-query": "^5.81.0",
    "@tanstack/react-query-devtools": "^5.81.0",
    "i18next": "^25.0.0",
    "i18next-browser-languagedetector": "^8.0.4",
    "i18next-chained-backend": "^4.6.2",
    "i18next-http-backend": "^3.0.2",
    "i18next-resources-to-backend": "^1.2.1",
    "isbot": "^5",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-i18next": "^16.0.0",
    "react-router": "^7.6.3",
    "vscode-jsonrpc": "8.2.0",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@axonivy/eslint-config": "~13.2.0-next.909.6b8b57e",
    "@axonivy/prettier-config": "~13.2.0-next.909.6b8b57e",
    "@axonivy/ts-config": "~13.2.0-next.909.6b8b57e",
    "@react-router/dev": "^7.6.3",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/node": "^22.18.12",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@vanilla-extract/recipes": "^0.5.5",
    "@vitejs/plugin-react": "^5.0.0",
    "eslint-plugin-i18next": "^6.1.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "globals": "^16.0.0",
    "happy-dom": "^20.0.0",
    "i18next-parser": "^9.3.0",
    "orval": "7.14.0",
    "typescript": "^5.8.3",
    "vite": "^7.0.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.0"
  },
  "peerDependencies": {
    "@axonivy/process-editor": "~13.2.0-next",
    "@axonivy/process-editor-inscription-protocol": "~13.2.0-next"
  },
  "engines": {
    "node": ">=20.19.0"
  },
  "volta": {
    "node": "22.17.0"
  },
  "workspaces": [
    "webviews/process-editor",
    "playwright"
  ],
  "prettier": "@axonivy/prettier-config"
}
