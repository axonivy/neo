{
  "name": "@axonivy/neo-root",
  "private": true,
  "version": "14.0.0-next",
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "ci": "pnpm run ci:prepare && pnpm run type && (pnpm run lint:ci || true) && pnpm run test:ci  && pnpm run i18n:ci",
    "ci:prepare": "pnpm install --no-frozen-lockfile && pnpm run build:editor && pnpm run i18n:collect && pnpm run build",
    "build": "react-router build",
    "build:editor": "pnpm run --filter @axonivy/neo-webview-process-editor build",
    "dev": "react-router dev",
    "dev:debug": "export DEBUG=vite:* && remix vite:dev",
    "serve": "vite preview",
    "openapi:codegen": "orval",
    "openapi:download": "mvn clean validate && curl -o target/market/openapi.json https://market.axonivy.com/marketplace-service/api-docs/api --create-dirs",
    "lint": "eslint",
    "lint:ci": "eslint -o eslint.xml -f checkstyle",
    "lint:fix": "eslint --fix",
    "lint:inspect": "eslint --inspect-config",
    "i18n": "pnpm run i18n:extract && pnpm run i18n:collect",
    "i18n:collect": "node --experimental-transform-types ./scripts/i18n-collect.ts",
    "i18n:extract": "i18next-cli extract",
    "i18n:ci": "i18next-cli extract --ci --dry-run",
    "test": "vitest",
    "test:ci": "vitest run",
    "playwright": "pnpm run --filter playwright --",
    "type": "react-router typegen && tsc && pnpm run --filter @axonivy/neo-webview-process-editor type && pnpm run --filter @axonivy/neo-playwright type",
    "update:axonivy:next": "npx --yes npm-check-updates @axonivy* -ws --root -t semver -u",
    "sbom": "pnpm dlx @cyclonedx/cdxgen -t pnpm"
  },
  "dependencies": {
    "@axonivy/cms-editor": "~14.0.0-next.591.86a657c",
    "@axonivy/cms-editor-protocol": "~14.0.0-next.591.86a657c",
    "@axonivy/database-editor": "~14.0.0-next.133.33df7c4",
    "@axonivy/database-editor-protocol": "~14.0.0-next.133.33df7c4",
    "@axonivy/dataclass-editor": "~14.0.0-next.757.5ee9bed",
    "@axonivy/dataclass-editor-protocol": "~14.0.0-next.757.5ee9bed",
    "@axonivy/form-editor": "~14.0.0-next.1042.2476f3d",
    "@axonivy/form-editor-core": "~14.0.0-next.1042.2476f3d",
    "@axonivy/form-editor-protocol": "~14.0.0-next.1042.2476f3d",
    "@axonivy/jsonrpc": "~14.0.0-next.957.4046f5f",
    "@axonivy/log-view": "~14.0.0-next.291.9bd2541",
    "@axonivy/log-view-core": "~14.0.0-next.291.9bd2541",
    "@axonivy/ui-components": "~14.0.0-next.957.4046f5f",
    "@axonivy/ui-graph": "~14.0.0-next.957.4046f5f",
    "@axonivy/ui-icons": "~14.0.0-next.957.4046f5f",
    "@axonivy/variable-editor": "~14.0.0-next.888.bb7384d",
    "@axonivy/variable-editor-protocol": "~14.0.0-next.888.bb7384d",
    "@eclipse-glsp/protocol": "2.5.0",
    "@react-router/node": "^7.6.3",
    "@tanstack/react-query": "^5.81.0",
    "@tanstack/react-query-devtools": "^5.81.0",
    "i18next": "^25.0.0",
    "i18next-browser-languagedetector": "^8.0.4",
    "i18next-chained-backend": "^4.6.2",
    "i18next-http-backend": "^3.0.2",
    "i18next-resources-to-backend": "^1.2.1",
    "isbot": "^5",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-i18next": "^16.0.0",
    "react-router": "^7.6.3",
    "vscode-jsonrpc": "8.2.0",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@axonivy/eslint-config": "~14.0.0-next.957.4046f5f",
    "@axonivy/prettier-config": "~14.0.0-next.957.4046f5f",
    "@axonivy/ts-config": "~14.0.0-next.957.4046f5f",
    "@react-router/dev": "^7.6.3",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/node": "^24.0.0",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@vanilla-extract/recipes": "^0.5.5",
    "@vitejs/plugin-react": "^5.0.0",
    "eslint-plugin-i18next": "^6.1.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "globals": "^16.0.0",
    "happy-dom": "^20.0.0",
    "i18next-cli": "^1.21.1",
    "orval": "7.17.0",
    "typescript": "^5.8.3",
    "vite": "^7.0.0",
    "vite-plugin-compression2": "^2.3.1",
    "vite-tsconfig-paths": "^6.0.0",
    "vitest": "^4.0.0"
  },
  "peerDependencies": {
    "@axonivy/process-editor": "~14.0.0-next",
    "@axonivy/process-editor-inscription-protocol": "~14.0.0-next"
  },
  "engines": {
    "node": ">=20.19.0"
  },
  "volta": {
    "node": "24.11.0"
  },
  "workspaces": [
    "webviews/process-editor",
    "playwright"
  ],
  "prettier": "@axonivy/prettier-config"
}
