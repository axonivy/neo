{
  "name": "neo",
  "private": true,
  "version": "13.1.0-next",
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "ci": "npm run ci:prepare && npm run type && (npm run lint:ci || true) && npm run test:ci",
    "ci:prepare": "npm install && npm run build:editor && npm run build",
    "build": "react-router build",
    "dev": "react-router dev",
    "dev:debug": "export DEBUG=vite:* && remix vite:dev",
    "serve": "vite preview",
    "codegen:openapi": "orval",
    "download:openapi": "npm run download:openapi:engine && npm run download:openapi:market",
    "download:openapi:engine": "curl -o openapi-default.yaml $npm_config_engine_base/api/openapi.yaml -o openapi-dev.yaml $npm_config_engine_base/~Developer-workflow-demos/api/openapi.yaml -o openapi-system.yaml $npm_config_engine_base/system/api/openapi.yaml",
    "download:openapi:market": "curl -o openapi-market.json https://market.axonivy.com/marketplace-service/api-docs/api",
    "build:editor": "npm run -w webviews/process-editor build",
    "lint": "eslint",
    "lint:ci": "eslint -o eslint.xml -f checkstyle",
    "lint:fix": "eslint --fix",
    "lint:inspect": "eslint --inspect-config",
    "test": "vitest",
    "test:ci": "vitest --watch=false",
    "playwright": "npm run -w playwright --",
    "type": "react-router typegen && tsc && npm run -w webviews/process-editor type && npm run -w playwright type",
    "update:axonivy:next": "npx --yes npm-check-updates @axonivy* -ws --root -t patch -u"
  },
  "dependencies": {
    "@axonivy/dataclass-editor": "~13.1.0-next.299",
    "@axonivy/dataclass-editor-protocol": "~13.1.0-next.299",
    "@axonivy/form-editor": "~13.1.0-next.491",
    "@axonivy/form-editor-core": "~13.1.0-next.491",
    "@axonivy/form-editor-protocol": "~13.1.0-next.491",
    "@axonivy/jsonrpc": "~13.1.0-next.427",
    "@axonivy/ui-components": "~13.1.0-next.427",
    "@axonivy/ui-icons": "~13.1.0-next.427",
    "@axonivy/variable-editor": "~13.1.0-next.460",
    "@axonivy/variable-editor-protocol": "~13.1.0-next.460",
    "@react-router/node": "^7.1.1",
    "@tanstack/react-query": "5.32.1",
    "@tanstack/react-query-devtools": "5.32.1",
    "isbot": "^5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router": "^7.1.1",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@axonivy/eslint-config": "^13.1.0-next.427",
    "@react-router/dev": "^7.1.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.1",
    "@vanilla-extract/recipes": "^0.5.5",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "globals": "^13.24.0",
    "happy-dom": "^15.11.7",
    "orval": "^7.3.0",
    "prettier": "^3.3.2",
    "typescript": "^5.7.2",
    "vite": "^5.4.9",
    "vite-plugin-svgr": "^4.3.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "volta": {
    "node": "22.11.0"
  },
  "workspaces": [
    "webviews/process-editor",
    "playwright"
  ]
}
