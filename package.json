{
  "name": "neo",
  "private": true,
  "version": "11.4.0-next",
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "ci": "npm run ci:prepare && npm run type && npm run lint:ci && npm run test:ci && npm run build",
    "ci:prepare": "npm install && npm run build:editor",
    "codegen:openapi": "orval",
    "build": "remix vite:build",
    "dev": "remix vite:dev",
    "dev:debug": "export DEBUG=vite:* && remix vite:dev",
    "download:openapi": "curl -o openapi-dev.yaml",
    "build:editor": "npm run -w webviews/process-editor build",
    "start:mock": "node --watch ./mock-server.js",
    "lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
    "lint:ci": "npm run lint -- -o eslint.xml -f checkstyle",
    "preview": "vite preview",
    "test": "vitest",
    "test:ci": "vitest --watch=false",
    "playwright": "npm run -w playwright --",
    "type": "tsc && npm run -w webviews/process-editor type && npm run -w playwright type",
    "update:axonivy:next": "npx --yes npm-check-updates @axonivy* -ws --root -t patch -u"
  },
  "dependencies": {
    "@axonivy/form-editor": "~11.4.0-next.149",
    "@axonivy/form-editor-core": "~11.4.0-next.149",
    "@axonivy/form-editor-protocol": "~11.4.0-next.149",
    "@axonivy/jsonrpc": "~11.4.0-next.247",
    "@axonivy/ui-components": "~11.4.0-next.247",
    "@axonivy/ui-icons": "~11.4.0-next.247",
    "@axonivy/variable-editor": "~11.4.0-next.300",
    "@remix-run/node": "^2.10.0",
    "@remix-run/react": "^2.10.0",
    "@tanstack/react-query": "5.32.1",
    "@tanstack/react-query-devtools": "5.32.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zustand": "^4.5.4"
  },
  "devDependencies": {
    "@remix-run/dev": "^2.10.0",
    "@remix-run/testing": "^2.10.0",
    "@testing-library/jest-dom": "^6.4.6",
    "@testing-library/react": "^16.0.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.14.1",
    "@vanilla-extract/recipes": "^0.5.3",
    "@vitejs/plugin-react": "^4.3.1",
    "eslint": "^8.38.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "eslint-plugin-react": "^7.34.3",
    "eslint-plugin-react-hooks": "^4.6.2",
    "happy-dom": "^14.12.3",
    "orval": "7.0.0",
    "prettier": "^3.3.2",
    "typescript": "^5.5.2",
    "vite": "^5.3.1",
    "vite-plugin-svgr": "^4.2.0",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^1.6.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "workspaces": [
    "webviews/process-editor",
    "playwright"
  ]
}
