{
  "name": "neo",
  "private": true,
  "version": "12.0.0-next",
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "ci": "npm run ci:prepare && npm run type && npm run lint:ci && npm run test:ci && npm run build",
    "ci:prepare": "npm install && npm run build:editor",
    "codegen:openapi": "orval && sed -i -e '/^    headers:/d' ./app/data/generated/*.ts",
    "build": "remix vite:build",
    "dev": "remix vite:dev",
    "dev:debug": "export DEBUG=vite:* && remix vite:dev",
    "download:openapi": "npm run download:openapi:engine && npm run download:openapi:market",
    "download:openapi:engine": "curl -o openapi-default.yaml $npm_config_engine_base/api/openapi.yaml -o openapi-dev.yaml $npm_config_engine_base/ivy-dev-workflow-demos/api/openapi.yaml -o openapi-system.yaml $npm_config_engine_base/system/api/openapi.yaml",
    "download:openapi:market": "curl -o openapi-market.json https://market.axonivy.com/marketplace-service/api-docs/api",
    "build:editor": "npm run -w webviews/process-editor build",
    "start:mock": "node --watch ./mock-server.js",
    "lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
    "lint:ci": "npm run lint -- -o eslint.xml -f checkstyle",
    "preview": "vite preview",
    "test": "vitest",
    "test:ci": "vitest --watch=false",
    "playwright": "npm run -w playwright --",
    "type": "tsc && npm run -w webviews/process-editor type && npm run -w playwright type",
    "update:axonivy:next": "npx --yes npm-check-updates @axonivy* -ws --root -t patch -u"
  },
  "dependencies": {
    "@axonivy/dataclass-editor": "~12.0.0-next.93",
    "@axonivy/form-editor": "~12.0.0-next.314",
    "@axonivy/form-editor-core": "~12.0.0-next.314",
    "@axonivy/form-editor-protocol": "~12.0.0-next.314",
    "@axonivy/jsonrpc": "~12.0.0-next.326",
    "@axonivy/ui-components": "~12.0.0-next.326",
    "@axonivy/ui-icons": "~12.0.0-next.326",
    "@axonivy/variable-editor": "~12.0.0-next.362",
    "@remix-run/node": "^2.11.2",
    "@remix-run/react": "^2.11.2",
    "@tanstack/react-query": "5.32.1",
    "@tanstack/react-query-devtools": "5.32.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zustand": "^4.5.5"
  },
  "devDependencies": {
    "@remix-run/dev": "^2.11.2",
    "@remix-run/testing": "^2.11.2",
    "@testing-library/jest-dom": "^6.4.8",
    "@testing-library/react": "^16.0.0",
    "@types/react": "^18.3.4",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.2.0",
    "@typescript-eslint/parser": "^8.2.0",
    "@vanilla-extract/recipes": "^0.5.5",
    "@vitejs/plugin-react": "^4.3.1",
    "eslint": "^8.56.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "happy-dom": "^15.0.0",
    "orval": "7.0.1",
    "prettier": "^3.3.2",
    "typescript": "^5.5.4",
    "vite": "^5.4.6",
    "vite-plugin-svgr": "^4.2.0",
    "vite-tsconfig-paths": "^5.0.1",
    "vitest": "^2.1.1"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "workspaces": [
    "webviews/process-editor",
    "playwright"
  ]
}
