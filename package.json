{
  "name": "@axonivy/neo-root",
  "private": true,
  "version": "12.0.13-next",
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "ci": "npm run ci:prepare && npm run type && (npm run lint:ci || true) && npm run test:ci",
    "ci:prepare": "npm install && npm run monaco-postinstall && npm run build:editor && npm run build",
    "monaco-postinstall": "npm explore monaco-languageclient -- npm run postinstall",
    "build": "react-router build",
    "dev": "react-router dev",
    "dev:debug": "export DEBUG=vite:* && remix vite:dev",
    "serve": "vite preview",
    "openapi:codegen": "orval",
    "openapi:download": "mvn clean validate && curl -o target/market/openapi.json https://market.axonivy.com/marketplace-service/api-docs/api --create-dirs",
    "build:editor": "npm run -w @axonivy/neo-webview-process-editor build",
    "lint": "eslint",
    "lint:ci": "eslint -o eslint.xml -f checkstyle",
    "lint:fix": "eslint --fix",
    "lint:inspect": "eslint --inspect-config",
    "test": "vitest",
    "test:ci": "vitest run",
    "playwright": "npm run -w playwright --",
    "type": "react-router typegen && tsc && npm run -w @axonivy/neo-webview-process-editor type && npm run -w @axonivy/neo-playwright type",
    "update:axonivy:next": "npx --yes npm-check-updates @axonivy* -ws --root -t semver -u",
    "sbom": "npx --yes @cyclonedx/cyclonedx-npm --output-format JSON --output-file bom.json"
  },
  "dependencies": {
    "@axonivy/dataclass-editor": "~12.0.13-next.608.c270416",
    "@axonivy/dataclass-editor-protocol": "~12.0.13-next.608.c270416",
    "@axonivy/form-editor": "~12.0.13-next.908.3aa0a1e",
    "@axonivy/form-editor-core": "~12.0.13-next.908.3aa0a1e",
    "@axonivy/form-editor-protocol": "~12.0.13-next.908.3aa0a1e",
    "@axonivy/jsonrpc": "~12.0.13-next.706.1505655",
    "@axonivy/ui-components": "~12.0.13-next.706.1505655",
    "@axonivy/ui-icons": "~12.0.13-next.706.1505655",
    "@axonivy/variable-editor": "~12.0.13-next.775.a35433d",
    "@axonivy/variable-editor-protocol": "~12.0.13-next.775.a35433d",
    "@react-router/node": "^7.10.1",
    "@tanstack/react-query": "^5.81.0",
    "@tanstack/react-query-devtools": "^5.81.0",
    "isbot": "^5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router": "^7.10.1",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@axonivy/eslint-config": "~12.0.13-next.706.1505655",
    "@react-router/dev": "^7.10.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.1",
    "@vanilla-extract/recipes": "^0.5.5",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "happy-dom": "^20.0.7",
    "orval": "7.21.0",
    "prettier": "^3.3.2",
    "typescript": "^5.8.3",
    "vite": "^7.0.0",
    "vite-plugin-svgr": "^4.3.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "@axonivy/process-editor-inscription-protocol": "~12.0.13-next",
    "react-hotkeys-hook": "^4.6.1",
    "react-resizable-panels": "^2.1.7"
  },
  "overrides": {
    "@axonivy/jsonrpc": "~12.0.13-next.706.1505655",
    "@axonivy/ui-components": "~12.0.13-next.706.1505655",
    "@axonivy/ui-icons": "~12.0.13-next.706.1505655"
  },
  "engines": {
    "node": ">=20.19.0"
  },
  "volta": {
    "node": "24.11.0"
  },
  "workspaces": [
    "webviews/process-editor",
    "playwright"
  ]
}
