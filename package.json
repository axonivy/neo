{
  "name": "@axonivy/neo-root",
  "private": true,
  "version": "13.2.0-next",
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "ci": "npm run ci:prepare && npm run type && (npm run lint:ci || true) && npm run test:ci  && npm run i18n:ci",
    "ci:prepare": "npm install && npm run build:editor && npm run i18n:collect && npm run build",
    "build": "react-router build",
    "dev": "react-router dev",
    "dev:debug": "export DEBUG=vite:* && remix vite:dev",
    "serve": "vite preview",
    "openapi:codegen": "orval",
    "openapi:download": "mvn clean validate && curl -o target/market/openapi.json https://market.axonivy.com/marketplace-service/api-docs/api --create-dirs",
    "build:editor": "npm run -w @axonivy/neo-webview-process-editor build",
    "lint": "eslint",
    "lint:ci": "eslint -o eslint.xml -f checkstyle",
    "lint:fix": "eslint --fix",
    "lint:inspect": "eslint --inspect-config",
    "test": "vitest",
    "test:ci": "vitest run",
    "playwright": "npm run -w playwright --",
    "type": "react-router typegen && tsc && npm run -w @axonivy/neo-webview-process-editor type && npm run -w @axonivy/neo-playwright type",
    "update:axonivy:next": "npx --yes npm-check-updates @axonivy* -ws --root -t semver -u",
    "sbom": "npx --yes @cyclonedx/cyclonedx-npm --output-format JSON --output-file bom.json",
    "i18n": "npm run i18n:extract && npm run i18n:collect",
    "i18n:collect": "node --experimental-transform-types ./scripts/i18n-collect.ts",
    "i18n:extract": "npx i18next-parser",
    "i18n:ci": "npx i18next-parser --fail-on-update"
  },
  "dependencies": {
    "@axonivy/dataclass-editor": "~13.2.0-next.681.94594e1",
    "@axonivy/dataclass-editor-protocol": "~13.2.0-next.681.94594e1",
    "@axonivy/database-editor": "~13.2.0-next.40.faafc25",
    "@axonivy/database-editor-protocol": "~13.2.0-next.40.faafc25",
    "@axonivy/form-editor": "~13.2.0-next.942.7efd3ec",
    "@axonivy/form-editor-core": "~13.2.0-next.942.7efd3ec",
    "@axonivy/form-editor-protocol": "~13.2.0-next.942.7efd3ec",
    "@axonivy/jsonrpc": "~13.2.0-next.860.d9aa0de",
    "@axonivy/log-view": "~13.2.0-next.226.b27a7cf",
    "@axonivy/log-view-core": "~13.2.0-next.226.b27a7cf",
    "@axonivy/ui-components": "~13.2.0-next.860.d9aa0de",
    "@axonivy/ui-graph": "~13.2.0-next.860.d9aa0de",
    "@axonivy/ui-icons": "~13.2.0-next.860.d9aa0de",
    "@axonivy/variable-editor": "~13.2.0-next.817.23f59fb",
    "@axonivy/variable-editor-protocol": "~13.2.0-next.817.23f59fb",
    "@axonivy/cms-editor": "~13.2.0-next.429.fc20887",
    "@axonivy/cms-editor-protocol": "~13.2.0-next.429.fc20887",
    "@react-router/node": "^7.6.3",
    "@tanstack/react-query": "^5.81.0",
    "@tanstack/react-query-devtools": "^5.81.0",
    "i18next": "^25.0.0",
    "i18next-browser-languagedetector": "^8.0.4",
    "i18next-chained-backend": "^4.6.2",
    "i18next-http-backend": "^3.0.2",
    "i18next-resources-to-backend": "^1.2.1",
    "isbot": "^5",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-i18next": "^15.4.1",
    "react-router": "^7.6.3",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@axonivy/eslint-config": "~13.2.0-next.860.d9aa0de",
    "@axonivy/prettier-config": "~13.2.0-next.860.d9aa0de",
    "@axonivy/ts-config": "~13.2.0-next.860.d9aa0de",
    "@react-router/dev": "^7.6.3",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/node": "^22.13.13",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@vanilla-extract/recipes": "^0.5.5",
    "@vitejs/plugin-react": "^5.0.0",
    "eslint-plugin-i18next": "^6.1.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "globals": "^16.0.0",
    "happy-dom": "^18.0.0",
    "i18next-parser": "^9.3.0",
    "orval": "7.12.1",
    "typescript": "^5.8.3",
    "vite": "^7.0.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "@axonivy/process-editor-inscription-protocol": "~13.2.0-next"
  },
  "engines": {
    "node": ">=20.19.0"
  },
  "volta": {
    "node": "22.17.0"
  },
  "workspaces": [
    "webviews/process-editor",
    "playwright"
  ],
  "prettier": "@axonivy/prettier-config"
}
