{
  "extends": "@axonivy/ts-config/integration",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "lib",
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "~/*": ["./app/*"]
    },
    "lib": ["DOM", "DOM.Iterable", "ES2023"],
    "target": "ES2023",
    "jsx": "react-jsx",
    "types": ["@react-router/node", "vite/client", "vitest/globals"],
    "rootDirs": [".", "./.react-router/types"]
  },
  "include": ["**/*.ts", "**/*.tsx", ".react-router/types/**/*"],
  "exclude": ["webviews/**", "playwright/**"]
}
